{{#extend "./../../views/layouts/authenticated" filename="auth/tasks/create-task"}}
  {{#content "viewContentHeading"}}Create Task{{/content}}
  {{#content "viewContent"}}
    <form action="{{storeTaskUrl}}" method="POST">
      {{> error_messages}}
      <div class="card">
        <div class="card-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{_oldInputs.name}}">
          </div>
          <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="description" cols="30" rows="10"
                      class="form-control">{{_oldInputs.description}}</textarea>
          </div>
          <div class="form-group">
            <label for="due_on">Due On</label>
            <input class="form-control" type="date" name="due_on" id="due_on" value="{{_oldInputs.due_on}}">
          </div>
        </div>
      </div>
      <div class="card mt-5">
        <div class="card-footer">
          <div class="form-group mb-0">
            <button class="btn btn-primary">Create Task</button>
          </div>
        </div>
      </div>
    </form>
  {{/content}}
{{/extend}}
