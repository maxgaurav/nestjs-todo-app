{{#extend "./../views/layouts/authenticated" filename="auth/dashboard"}}
  {{#content "viewContentHeading"}}
      Dashboard
      <a href="/tasks/create" class="btn btn-primary float-right">Create Task</a>
  {{/content}}
  {{#content "viewContent"}}
    <div class="card">
      <div class="card-header">
        <h3>Tasks</h3>
      </div>
      <div class="card-body table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
          <tr>
            <th>Name</th>
            <th>Due On</th>
            <th>Completed on</th>
            <th>Actions</th>
          </tr>
          </thead>
          <tbody>
          {{#each tasks}}
            {{#with this as |task|}}
              <tr>
                <td>{{task.name}}</td>
                <td>{{task.due_on}}</td>
                <td>{{task.completed_on}}</td>
                <td><a href="/tasks/{{task.id}}/edit" class="btn btn-primary">Edit</a></td>
              </tr>
            {{/with}}
          {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  {{/content}}
{{/extend}}
